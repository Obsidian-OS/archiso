PACKAGES="$PACKAGES wget os-prober pv"
OUTPUT_SFS="system.sfs" # Output SquashFS
HOSTNAME="obsidianbtw"  # Hostname
YAY_GET="obsidianctl-git plugind-git obsidianwall-git obsidian-control"
